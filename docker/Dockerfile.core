FROM python:3.7-alpine3.14

WORKDIR /app/

# upgrade pip
RUN python -m pip install --upgrade pip

# install common packages
RUN \
    apk add --no-cache \
    postgresql-libs \
    libpq \
    curl

COPY ./src/core/requirements.txt /app/core/requirements.txt
COPY ./src/common/requirements.txt /app/common/requirements.txt

# install dependencies
RUN \
    apk add --no-cache --virtual .build-deps \
    gcc \
    g++ \
    make \
    glib-dev \
    musl-dev \
    python3-dev \
    libffi-dev \
    postgresql-dev && \
    pip install --no-cache-dir -r /app/core/requirements.txt && \
    pip install --no-cache-dir -r /app/common/requirements.txt && \
    apk --purge del .build-deps

COPY ./docker/start.sh /start.sh
RUN chmod +x /start.sh

COPY ./docker/prestart_core.sh /app/prestart.sh
RUN chmod +x /app/prestart.sh

COPY ./docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

COPY ./docker/gunicorn_conf.py /gunicorn_conf.py

COPY ./src/core/. /app/core
COPY ./src/common/. /app/common

RUN ls -s /app/core/manage.py /app/manage.py && \
    chmod +x /app/core/manage.py && \
    ls -s /app/core/db_migration.py /app/db_migration.py && \
    chmod +x /app/core/db_migration.py

EXPOSE 80

# setup environment variables
ENV PYTHONPATH=/app
ENV MODULE_NAME core.run
ENV VARIABLE_NAME app
ENV GUNICORN_CMD_ARGS --timeout 120 --preload
ENV WORKERS_PER_CORE 8

VOLUME ["/data"]

HEALTHCHECK --interval=15s --timeout=3s --retries=5 CMD curl --fail http://localhost/api/v1/isalive || exit 1

ENTRYPOINT ["/entrypoint.sh"]
CMD ["/start.sh"]
